---
// src/components/SupportModal.astro
const { siteData } = Astro.props;
const phoneTel = `tel:${siteData?.contact?.nap?.phone_raw || '#'}`;
const ctaSecondary = siteData?.cta?.secondary || 'Speak to an Expert';
const leadFormUrl = siteData?.technical?.lead_form_url || '#'; // Get webhook URL
---
<div id="support-modal" class="fixed inset-0 bg-black bg-opacity-50 items-center justify-center z-50 hidden p-4">
    <div class="bg-white rounded-lg shadow-lg max-w-md w-full mx-4 relative max-h-full overflow-y-auto">
        <button id="modal-close" class="absolute top-4 right-4 text-gray-400 hover:text-gray-600 text-2xl z-10">&times;</button>
        <div class="p-6">
            <div class="text-center mb-6">
                <i class="fas fa-headset text-4xl text-brand-primary mb-3"></i>
                <h3 class="text-2xl font-bold text-gray-800 mb-2">Get Expert Help</h3>
                <p class="text-gray-600">Choose how you'd like to connect with our specialists</p>
            </div>
            
            <div class="space-y-4 mb-6">
                <a href={phoneTel} class="flex items-center justify-center w-full py-3 px-4 font-semibold rounded-lg transition duration-200 text-white bg-brand-primary hover:bg-brand-primary-dark">
                    <i class="fas fa-phone mr-3"></i>
                    <span>{ctaSecondary}</span>
                </a>
                
                <div class="w-full">
                    <button id="callback-toggle" class="flex items-center justify-center w-full py-3 px-4 font-semibold rounded-lg transition duration-200 text-white bg-brand-primary hover:bg-brand-primary-dark">
                        <i class="fas fa-calendar-check mr-3"></i>
                        <span>Request a Callback</span>
                        <i class="fas fa-chevron-down ml-2 transition-transform duration-200" id="callback-arrow"></i>
                    </button>
                    
                    <div id="callback-form" class="hidden">
                        <div class="border-l border-r border-b border-gray-200 rounded-b-lg bg-white p-4 -mt-1">
                        {/* Use action URL from siteData */}
                        <form id="callback-request-form" method="POST" action={leadFormUrl} class="space-y-4"> 
                            {/* Optional: Add hidden inputs for FormSubmit if needed */}
                            {/* <input type="hidden" name="_subject" value={`New Callback Request - ${siteData?.company?.name || ''}`}> */}
                            
                            <div>
                                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                                <input type="text" id="name" name="name" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-brand-primary">
                            </div>
                            
                            <div>
                                <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                                <input type="tel" id="phone" name="phone" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-brand-primary">
                            </div>
                            
                            <div>
                              <label for="loan-type" class="block text-sm font-medium text-gray-700 mb-1">Loan Type</label>
                              <select id="loan-type" name="loan_type" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-brand-primary">
                                  <option value="">Select a loan type</option>
                                  <option value="Home Loan">Home Loan</option>
                                  <option value="Refinance">Refinance</option>
                                  <option value="Business Loan">Business Loan</option>
                                  <option value="Equipment Finance">Equipment Finance</option>
                                  <option value="Other">Other</option>
                              </select>
                            </div>
                            
                            <button type="submit" class="w-full py-3 px-4 font-semibold rounded-lg transition duration-200 text-white bg-brand-primary hover:bg-brand-primary-dark">
                                <i class="fas fa-paper-plane mr-2"></i>
                                Request Callback
                            </button>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
