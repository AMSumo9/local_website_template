---
import { getCollection } from 'astro:content';
import projectData from '../data/project.json';

// Get all the services
const allServices = await getCollection('services');

// Get all the site data
const siteData = projectData;
const companyName = siteData?.company?.name || '[Company Name]';
const tagline = siteData?.company?.tagline || '';
const legalNotice = siteData?.company?.legal_notice || '';
const phoneTel = `tel:${siteData?.contact?.nap?.phone_raw || '#'}`;
const facebookUrl = siteData?.social?.facebook || '#';
const instagramUrl = siteData?.social?.instagram || '#';
const tiktokUrl = siteData?.social?.tiktok || '#';
const footerNav = siteData?.navigation?.footer_company || [];
const currentYear = new Date().getFullYear();
const cityName = siteData?.contact?.nap?.city || '';
const servicesFormat = siteData?.footer?.services_format || 'service_only';
---
<footer class="bg-gray-900 text-white py-12">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      
      <div>
        <h3 class="text-xl font-bold mb-4 text-brand-accent">{companyName}</h3>
        <p class="text-gray-300 mb-4">{tagline}</p>
        <a href={phoneTel} class="flex items-center text-gray-300 hover:text-white transition duration-200">
          <i class="fas fa-phone mr-3 text-brand-accent"></i>
          <span>Contact Us</span>
         </a>
      </div>

      <div>
        <h4 class="text-lg font-semibold mb-4 text-brand-accent">Connect</h4>
        <div class="flex space-x-4">
          <a href={facebookUrl} target="_blank" rel="noopener" class="text-gray-300 hover:text-white"><i class="fab fa-facebook-f text-2xl"></i></a>
          <a href={instagramUrl} target="_blank" rel="noopener" class="text-gray-300 hover:text-white"><i class="fab fa-instagram text-2xl"></i></a>
          <a href={tiktokUrl} target="_blank" rel="noopener" class="text-gray-300 hover:text-white"><i class="fab fa-tiktok text-2xl"></i></a>
        </div>
      </div>
      
      <div>
        <h4 class="text-lg font-semibold mb-4 text-brand-accent">Company</h4>
        <ul class="space-y-2">
          {footerNav.map(item => (
            <li>
              {item.action === 'modal' ? (
                <a href="#" onclick="openSupportModal(); return false;" class="text-gray-300 transition duration-200 hover:text-white">{item.name}</a>
              ) : (
                <a href={item.url} class="text-gray-300 transition duration-200 hover:text-white">{item.name}</a>
              )}
            </li>
          ))}
        </ul>
      </div>

      <div>
          <h4 class="text-lg font-semibold mb-4 text-brand-accent">Our Services</h4>
          <ul class="space-y-2">
            {allServices.map(service => {
              const serviceName = service.data.title.split(' | ')[0];
              const displayName = servicesFormat === 'location_first' && cityName
                ? `${cityName} ${serviceName}`
                : serviceName;
              return (
                <li>
                  <a href={`/services/${service.slug}/`} class="text-gray-300 hover:text-white">
                    {displayName}
                  </a>
                </li>
              );
            })}
          </ul>
     </div>
    </div>

    <div class="border-t border-gray-700 mt-8 pt-8 text-center">
      <p class="text-gray-400 text-sm">
        Â© {currentYear} {companyName}.
 All rights reserved.
      </p>
      <p class="text-gray-500 text-xs mt-2 max-w-4xl mx-auto">
        {legalNotice}
      </p>
    </div>
  </div>
</footer>