<style>
    /* Styling is adjusted based on user feedback:
        - Increased top margin for spacing.
        - Reduced box shadow thickness.
    */
    .lead-magnet-container {
        display: flex;
        justify-content: center;
        padding: 40px 20px 20px 20px;
        background-color: #f4f4f9;
        /* Adds required space between social icons and the magnet */
        margin-top: 30px; 
    }

    .lead-magnet-card {
        background: white;
        padding: 30px;
        border-radius: 10px;
        /* Reduced shadow intensity for less "shading" */
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08); 
        max-width: 400px;
        width: 100%;
        text-align: center;
    }

    .lead-magnet-card h2 {
        color: #333;
        margin-top: 0;
        font-size: 1.8rem;
    }

    .lead-magnet-card p {
        color: #666;
        margin-bottom: 20px;
    }

    .signup-form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .signup-form input {
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
    }

    .signup-form button {
        background-color: #007bff; /* Primary Action Color */
        color: white;
        padding: 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
        transition: background-color 0.3s ease;
    }

    .signup-form button:hover {
        background-color: #0056b3;
    }

    .privacy-note {
        font-size: 0.8rem;
        color: #aaa;
        margin-top: 20px;
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }
</style>
